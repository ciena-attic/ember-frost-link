{{#if (eq priority 'primary')}}
    <div class='content'>
      {{yield}}
        <div class='svg'>{{frost-icon icon='frost/new-tab'}}</div>
    </div>
{{/if}}

{{#if (eq priority 'secondary')}}
    <div class='content {{if (or isFocused isHovered) 'is-focused'}}'>
      {{yield}}
    </div>
{{/if}}

{{#if (eq priority 'tertiary')}}
    <div class='content'>
      {{yield}}
    </div>
{{/if}}